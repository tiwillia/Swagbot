<div class="row">
  <div class="col-sm-2">
    <h1 class="title">Bots</h1>
  </div>
  <div class="col-sm-10 text-right">
    <%= link_to 'New Bot', '/bots/new', :class => "btn btn-default" %>
  </div>
</div>
<% @bots.each do |bot| %>
  <% @bot = bot %>
  <h2 class="col-sm-offset-1"><%= link_to @bot.nick.capitalize, bot_path(@bot) %></h2>
  <%= render "show_bot" %>
<% end %>
